<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="愿望清单"
        android:textSize="22sp"
        android:textColor="#000000"
        android:paddingTop="55dip"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="活动类型"
            android:gravity="center"
            android:textSize="18sp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_release_type"
            android:entries="@array/activity_type"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetime_picker"
            android:text="选择时间"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="活动地点"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/activity_release_place"
            android:layout_weight="1"
            android:hint="请输入活动地点"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="活动详情"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/activity_release_detail"
            android:layout_weight="1"
            android:hint="请输入活动描述"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认发布"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submit_btn"
        android:layout_marginTop="30dip"
        />

</LinearLayout>
</ScrollView>